# Database
DATABASE_URL="postgresql://user:password@localhost:5432/quanty?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# App
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# SMTP (your hosting provider)
SMTP_HOST="smtp.yourhosting.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@quanty.com"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@quanty.com"

# Admin (change this!)
ADMIN_EMAIL="admin@quanty.com"
ADMIN_PASSWORD="ChangeThisPassword123!"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
